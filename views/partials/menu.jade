div(class="navbar-fixed")
		nav
			div(class="nav-wrapper green lighten-1")
				ul(class="left")
					li
						a(href="#" data-activates="slide-out" class="button-collapse")
							img(id="menuSidebar", class="material-icons", src="fonts/MaterialDesignIcons/menu.svg")
				ul(class="right")
					li
						a(id="dropbutton",class="dropdown-button", href="#!", data-activates="dropdown1")
