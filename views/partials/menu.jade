div(id="modalAvatar",class="modal modal-fixed-footer")
	div(class="modal-content")
		h4 Foto de perfil
			img(id="avatarEscolhido",class="circle responsive-img z-depth-1", src="/img/avatar.png", style="width:100px;")
			label Selecione a foto de perfil
			br
			input(type="file", id="avatar" accept=".jpg,png")
			button( class="btn waves-effect" id="uploadAvatar" onclick="uploadAvatar()") Enviar
	div(class="modal-footer")
		a(href="#" , class="modal-action modal-close waves-effect waves-green btn-flat") Fechar
	

div(id="modalFiles",class="modal modal-fixed-footer")
	div(class="modal-content")
		div(id="modalTop")
			h4(style="color:green; text-align:center;" class="right") Arquivos enviados
			button(class="waves-effect waves-light btn left" onclick="queryDatabase();") Carregar Arquivos
		div(id="containerFiles")
	div(class="modal-footer")
		a(href="#" , class="modal-action modal-close waves-effect waves-green btn-flat") Fechar

